@model QuestEngine.ViewModels.CurrentTeamRiddleViewModel

@{
    ViewBag.Title = "Index";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.TeamName)
    <div>
        <h4>
            Загадка №
            @Html.DisplayFor(model => model.RiddleNumber)
        </h4>
        <hr/>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.TeamName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TeamName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.RiddleText)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.RiddleText)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.RiddleStartTime)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.RiddleStartTime)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.NextPrompTime)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NextPrompTime)
            </dd>
            <dt>
                @Html.LabelFor(model => model.Code)
            </dt>
            <dd>
                @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control" } })
                <input type="submit" value="Проверить" class="btn btn-default"/>
            </dd>
        </dl>
    </div>
    
    <div class="form-group">

    </div>
}
@if (Model != null && Model.Prompts != null && Model.Prompts.Count != 0)
{
    <h4>
        Подсказки
    </h4>
    <hr/>
    <ol>
        @foreach (var item in Model.Prompts)
        {

            <li>
                @Html.DisplayFor(modelItem => item)
            </li>
            <hr/>
        }
    </ol>
}


